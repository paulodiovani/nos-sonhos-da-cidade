doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title= page.title + " | " + locals.title
    link(rel="stylesheet", type='text/css', href='css/slate/bootstrap.min.css')
    link(rel="stylesheet", type='text/css', href='css/default.css')
  body
    div.row
      div.col-md-12
        div.page-header
          h1= locals.title + " "
            small= page.title
          address por <a href="#{page.metadata.authorUrl}">#{page.metadata.author}</a>
    div.row
      div.col-md-8
        != page.html
      div.col-md-4
        ul.nav.nav-pills.nav-stacked
          li(class=page.url=="/"?"active":""):                a(href="/") Sobre o jogo
          li(class=page.url=="/introducao.html"?"active":""): a(href="/introducao.html") Introdução
